generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// SQLite does not support Enums. Using Strings.

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      String   @default("MEMBER") // ADMIN, MEMBER
  lastSeenAt DateTime?
  mustChangePassword Boolean @default(false)
  avatarColor String?  // Kullanıcı avatar rengi

  tasks     Task[]   // Assignments
  submissions TaskSubmission[]
  branchOwnerships BranchOwnership[]
  notifications Notification[]
  comments Comment[]
  activityLogs ActivityLog[]

  createdAt DateTime @default(now())
}

model Project {
  id            Int      @id @default(autoincrement())
  name          String
  description   String?
  deploymentUrl String?
  repoUrl       String?
  
  branches      ProjectBranch[]
  servers       Server[]
  
  createdAt     DateTime @default(now())
}

model ProjectBranch {
  id        Int      @id @default(autoincrement())
  name      String   // e.g. "backend", "design"
  projectId Int
  project   Project  @relation(fields: [projectId], references: [id])
  tasks     Task[]
  owners    BranchOwnership[]
}

model Server {
  id          Int      @id @default(autoincrement())
  ipAddress   String
  name        String
  description String?
  isActive    Boolean  @default(true)
  projectId   Int
  project     Project  @relation(fields: [projectId], references: [id])
}

model Task {
  id            Int         @id @default(autoincrement())
  title         String
  description   String?
  points        Int         @default(1)
  dueAt         DateTime?
  status        String      @default("AVAILABLE") // AVAILABLE, TAKEN, COMPLETED, EXPIRED
  outputType    String      @default("URL")       // URL, REPO, SERVICE, DOCUMENT
  
  branchId      Int
  branch        ProjectBranch @relation(fields: [branchId], references: [id])
  
  assignedToId  Int?
  assignedTo    User?       @relation(fields: [assignedToId], references: [id])
  
  dependencies  TaskDependency[] @relation("TaskDependencies")
  dependentOn   TaskDependency[] @relation("TaskDependents")
  
  submission    TaskSubmission?
  comments      Comment[]

  createdAt     DateTime @default(now())
}

model TaskDependency {
  id          Int  @id @default(autoincrement())
  taskId      Int  // The task that has a dependency
  dependsOnId Int  // The task that must be finished first
  
  task        Task @relation("TaskDependents", fields: [taskId], references: [id])
  dependsOn   Task @relation("TaskDependencies", fields: [dependsOnId], references: [id])
}

model TaskSubmission {
  id          Int        @id @default(autoincrement())
  taskId      Int        @unique
  task        Task       @relation(fields: [taskId], references: [id])
  userId      Int
  user        User       @relation(fields: [userId], references: [id])
  
  outputType  String     // URL, REPO...
  outputUrl   String
  note        String?
  
  createdAt   DateTime   @default(now())
}

model BranchOwnership {
  id        Int      @id @default(autoincrement())
  
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  
  branchId  Int
  branch    ProjectBranch @relation(fields: [branchId], references: [id])
  
  role      String   @default("CONTRIBUTOR") // OWNER, CO_OWNER, CONTRIBUTOR
  status    String   @default("ACTIVE")      // ACTIVE, PAUSED
  note      String?
  
  createdAt DateTime @default(now())
  
  @@unique([userId, branchId])
}

// ==================== YENİ MODELLER ====================

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  type      String   // TASK_ASSIGNED, TASK_COMPLETED, COMMENT, DEADLINE_SOON, MENTION
  title     String
  message   String
  isRead    Boolean  @default(false)
  link      String?

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model Comment {
  id        Int      @id @default(autoincrement())
  taskId    Int
  userId    Int
  content   String

  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model ActivityLog {
  id         Int      @id @default(autoincrement())
  userId     Int
  action     String   // TASK_CREATED, TASK_TAKEN, TASK_COMPLETED, PROJECT_CREATED, COMMENT_ADDED
  entityType String   // TASK, PROJECT, BRANCH, USER
  entityId   Int
  metadata   Json?    // Ekstra bilgiler

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt  DateTime @default(now())
}
